<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include("./partials/header"); %>
            <title>Blogify - Add New Blog</title>
    </head>

    <body>
        <%- include("./partials/nav_bar"); %>
            <div class="container">
                <form action="/add-new-blog" method="post">
                    <div class="mt-3 mb-3">
                        <label for="coverImage" class="form-label">Cover Image</label>
                        <input type="file" class="form-control" name="coverImage" id="coverImage"
                            aria-describedby="coverImage">
                    </div>
                    <div class="mt-3 mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" name="title" id="title" aria-describedby="title">
                    </div>
                    <div class="mt-3 mb-3">
                        <label for="body">Body</label>
                        <textarea name="body" class="form-control" placeholder="Leave a comment here"
                            id="body"></textarea>
                    </div>
                    <div class="mt-3 mb-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>

                </form>
            </div>
            <%- include("./partials/scripts"); %> <%- include("./partials/footer"); %>
    </body>

</html>